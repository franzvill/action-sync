# Database
POSTGRES_USER=meeting_jira
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=meeting_jira

# Security
SECRET_KEY=your-secret-key-change-in-production

# LLM Provider Selection
# Options: "anthropic" (direct API) or "azure_anthropic" (Azure)
LLM_PROVIDER=azure_anthropic

# Azure Anthropic (Claude) - Required if LLM_PROVIDER=azure_anthropic
AZURE_ANTHROPIC_ENDPOINT=https://your-endpoint.azure.com
AZURE_ANTHROPIC_API_KEY=your-api-key
AZURE_ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Direct Anthropic (Claude) - Required if LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-opus-4-20250514

# Embedding Provider Selection
# Options: "openai" (direct API) or "azure_openai" (Azure)
EMBEDDING_PROVIDER=azure_openai

# Azure OpenAI Embeddings - Optional (for semantic search) if EMBEDDING_PROVIDER=azure_openai
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Direct OpenAI Embeddings - Optional (for semantic search) if EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
